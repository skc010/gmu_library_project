<% content_for :title, @book.title %>
<article class="book">
	<header>
		<h2><%= @book.title %></h2>
	</header>

	<%=  image_tag @book.image_cover_url %>

	<p> <%= @book.abstract %> </p>

	Details
	<p><label>ISBN:</label> <%= @book.isbn %></p>
	<p><label>Author:</label> <%= link_to @book.author.name, author_path(@book.author) %></p>
	<p><label>Genre:</label> <%= @book.genre %></p>
	<p><label>Pages:</label> <%= @book.pages %></p>
	<p><label>Published On</label> <%= @book.published_on.strftime('%B %d, %Y') %></p>
	<p><label>Available to Reserve:</label> <%= available_to_reserve(@book) %></p>
</article>

<% if session[:is_admin] %>
	<%= link_to 'Edit', edit_book_path(@book) %>
	<%= button_to 'Delete', @book, method: :delete, data: {confirm:'Are you sure?'} %>
<% end %>
  



<% if reserve?(@book) %>
     <p><%= button_to 'Reserve', new_reservation_path(@book), class:"btn btn-primary" %></p>
<% elsif  @book.reservations %>
	<p class="bg-info">You currently have this book checked out.</p>
<% else %>
	This book is not currently available.
<% end %>







<%= link_to 'Reservation', new_reservation_path(@book) %>


</article>