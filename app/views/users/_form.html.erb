<%= form_for(@user) do |f| %>
	<%= render 'shared/validation_errors', object: @user %>
	<%= f.label :name %> <%= f.text_field :name, autofocus:true %><br/>
	<%= f.label :user_id, 'User ID' %> <%= f.text_field :user_id %><br/>
	<%= f.label :password, 'Password' %> <%= f.password_field :password %><br/>
	<%= f.label :password_confirmation, 'Confirm:' %><%= f.password_field :password_confirmation %>
	<%= f.label :admin %> <%= f.check_box :admin %><br/>
	<p>
		<%= f.submit %>
	</p>
<% end %>