<div class="page-header">
  <h1>Listing Users</h1>

  <div class="contextual">
    <%= link_to(new_user_path, class: "btn btn-success") do %>
      New User <i class="icon-plus icon-white"></i>
    <% end %>
  </div>
  </div>


<table class="table table-striped table-bordered table-condensed">
  <thead>
  <tr>
    <th colspan="1">Name</th>
    <th colspan="1">User ID</th>
    <th colspan="1">Admin</th>
    <th colspan="1">Updated</th>
    <th colspan="1">Actions</th>
</tr>
</thead>
<tbody>
  <% unless @users.empty? %>
    <% @users.each do |user| %>
      <tr>
        <td></td>
        <td><%= user.name %></td>
        <td><%= user.user_id %></td>
        <td><%= user.admin %></td>
        <td><%= time_ago_in_words(user.updated_at) %></td>         
        <td>
          <%= link_to(show_user_path(user), class: "btn btn-small") do %>
            Details <i class="icon-show icon-white"></i>
          <% end %>
          <%= link_to(edit_user_path(user), class: "btn btn-small") do %>
            Edit <i class="icon-edit icon-white"></i>
          <% end %>


          <%= link_to(user, class: "btn btn-small btn-danger", confirm: t_deletion_confirm(user, user.fname), method: :delete, :title => t('EHM-G.destroy')) do %>
            Delete <i class="icon-trash icon-white"></i>
          <% end %>

        </td>
      </tr>
    <% end %>
  <% else %>
    <tr>
      <td colspan="0">Nothing to see here move along please</td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>



