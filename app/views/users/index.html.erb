<div class="page-header">
  <h1>Listing Users</h1>
</div>

<%= page_entries_info @users %>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th colspan="1">Name</th>
      <th colspan="1">User ID</th>
      <th colspan="1">Admin</th>
      <th colspan="1">Updated</th>
      <th colspan="1">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.user_id %></td>
        <td><%= user.admin %></td>
        <td><%= time_ago_in_words(user.updated_at) %></td>         
        <td>
          <%= link_to(user_path(user)) do %>
           Details
          <% end %>
          <%= link_to(edit_user_path(user)) do %>
            Edit
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @users %>

<br />
<div class="contextual">
  <%= link_to(new_user_path, class: "btn btn-success") do %>
    New User 
  <% end %>
</div>
  <br />